@model Bolzplatzarena.Blog.Blocks.CodeBlock
@{
	if (Model.Language == null)
	{
		return;
	}
}
<div class="code-block">
	<div class="caption">
	@if (!string.IsNullOrEmpty(Model.Filename))
	{
		<h4>@Model.Filename</h4>
	}
	<span>@Model.Language</span>
	</div>
	<pre><code class="language-@Model.Language.Value">@Html.Raw(Model.RawCode)</code></pre>
</div>